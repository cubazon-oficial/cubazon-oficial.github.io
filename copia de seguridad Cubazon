CREATE OR REPLACE VIEW auth_users_view AS
SELECT
au.id,
au.email,
au.created_at,
au.last_sign_in_at,
au.raw_user_meta_data->>'nombre' as nombre,
au.raw_user_meta_data->>'telefono' as telefono_meta,
au.phone as telefono_auth,
COALESCE(p.telefono, au.raw_user_meta_data->>'telefono', au.phone) as telefono,
COALESCE(p.nombre, au.raw_user_meta_data->>'nombre', 'Usuario sin nombre') as nombre_completo,
p.estado,
p.motivo_baneo,
p.fecha_baneo,
p.baneado_por
FROM auth.users au
LEFT JOIN perfiles p ON au.id = p.id;

GRANT SELECT ON auth_users_view TO authenticated;





------------





CREATE OR REPLACE FUNCTION public.handle_new_user()
RETURNS TRIGGER
LANGUAGE plpgsql
SECURITY DEFINER SET search_path = public
AS $$
BEGIN
    INSERT INTO public.perfiles (
        id, 
        nombre, 
        email, 
        telefono,
        created_at
    ) VALUES (
        NEW.id,
        NEW.raw_user_meta_data->>'nombre',
        NEW.email,
        NEW.raw_user_meta_data->>'telefono',
        NEW.created_at
    );
    
    INSERT INTO public.saldo_usuarios (
        user_id,
        saldo_actual
    ) VALUES (
        NEW.id,
        0
    ) ON CONFLICT (user_id) DO NOTHING;
    
    RETURN NEW;
END;
$$;

DROP TRIGGER IF EXISTS on_auth_user_created ON auth.users;
CREATE TRIGGER on_auth_user_created
    AFTER INSERT ON auth.users
    FOR EACH ROW
    EXECUTE FUNCTION public.handle_new_user();
    
    
    
    
    
