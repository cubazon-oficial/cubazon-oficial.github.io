-- ============================================
-- ESQUEMA COMPLETO PARA SUPABASE - CUBAZON
-- ============================================

-- 1. EXTENSIÃ“N PARA UUID
CREATE EXTENSION IF NOT EXISTS "uuid-ossp";

-- ============================================
-- TABLA: productos
-- ============================================
CREATE TABLE productos (
id SERIAL PRIMARY KEY,
nombre VARCHAR(255) NOT NULL,
precio DECIMAL(10,2) NOT NULL CHECK (precio >= 0),
stock INTEGER NOT NULL DEFAULT 0 CHECK (stock >= 0),
imagen_url TEXT,
descripcion TEXT,
etiquetas TEXT[] DEFAULT '{}',
oferta BOOLEAN DEFAULT FALSE,
precio_oferta DECIMAL(10,2) CHECK (precio_oferta >= 0),
porcentaje_descuento INTEGER GENERATED ALWAYS AS (
CASE
WHEN oferta AND precio > 0 AND precio_oferta IS NOT NULL
THEN ROUND(((precio - precio_oferta) / precio * 100))
ELSE 0
END
) STORED,
destacado BOOLEAN DEFAULT FALSE,
slug TEXT UNIQUE,
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

-- Ãndices
CREATE INDEX idx_productos_etiquetas ON productos USING GIN (etiquetas);
CREATE INDEX idx_productos_stock ON productos(stock);
CREATE INDEX idx_productos_destacado ON productos(destacado) WHERE destacado = TRUE;
CREATE INDEX idx_productos_oferta ON productos(oferta) WHERE oferta = TRUE;

-- ============================================
-- TABLA: pedidos
-- ============================================
CREATE TABLE pedidos (
id UUID PRIMARY KEY DEFAULT uuid_generate_v4(),
items JSONB NOT NULL,
subtotal DECIMAL(10,2) NOT NULL,
envio DECIMAL(10,2) DEFAULT 0,
descuento DECIMAL(10,2) DEFAULT 0,
total DECIMAL(10,2) NOT NULL,
cliente JSONB NOT NULL,
metodo_pago VARCHAR(50),
estado VARCHAR(50) DEFAULT 'pendiente' CHECK (estado IN ('pendiente', 'pagado', 'enviado', 'entregado', 'cancelado')),
cupon_aplicado TEXT,
notas TEXT,
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE INDEX idx_pedidos_created_at ON pedidos(created_at DESC);
CREATE INDEX idx_pedidos_estado ON pedidos(estado);

-- ============================================
-- TABLA: cupones
-- ============================================
CREATE TABLE cupones (
id SERIAL PRIMARY KEY,
codigo VARCHAR(20) UNIQUE NOT NULL,
descuento DECIMAL(5,2) NOT NULL CHECK (descuento > 0),
tipo VARCHAR(20) DEFAULT 'porcentaje' CHECK (tipo IN ('porcentaje', 'fijo')),
max_usos INTEGER DEFAULT 1,
usos_actuales INTEGER DEFAULT 0,
expiracion DATE,
activo BOOLEAN DEFAULT TRUE,
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE INDEX idx_cupones_codigo ON cupones(codigo);
CREATE INDEX idx_cupones_activo ON cupones(activo) WHERE activo = TRUE;

-- ============================================
-- TABLA: perfiles (datos adicionales de usuarios)
-- ============================================
CREATE TABLE perfiles (
id UUID PRIMARY KEY REFERENCES auth.users(id) ON DELETE CASCADE,
nombre TEXT,
email TEXT,
telefono TEXT,
direccion TEXT,
localidad TEXT,
referencia TEXT,
carnet TEXT,
estado VARCHAR(20) DEFAULT 'activo' CHECK (estado IN ('activo', 'baneado', 'inactivo')),
motivo_baneo TEXT,
fecha_baneo TIMESTAMP WITH TIME ZONE,
baneado_por TEXT,
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE INDEX idx_perfiles_email ON perfiles(email);
CREATE INDEX idx_perfiles_estado ON perfiles(estado);

-- ============================================
-- TABLA: saldo_usuarios
-- ============================================
CREATE TABLE saldo_usuarios (
id SERIAL PRIMARY KEY,
user_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
saldo_actual DECIMAL(10,2) DEFAULT 0,
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
UNIQUE(user_id)
);

CREATE INDEX idx_saldo_usuarios_user_id ON saldo_usuarios(user_id);

-- ============================================
-- TABLA: historial_saldo
-- ============================================
CREATE TABLE historial_saldo (
id SERIAL PRIMARY KEY,
user_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
tipo VARCHAR(50) CHECK (tipo IN ('recarga', 'compra', 'ajuste')),
monto DECIMAL(10,2) NOT NULL,
saldo_anterior DECIMAL(10,2) NOT NULL,
saldo_nuevo DECIMAL(10,2) NOT NULL,
referencia_id TEXT,
descripcion TEXT,
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE INDEX idx_historial_saldo_user_id ON historial_saldo(user_id);
CREATE INDEX idx_historial_saldo_created_at ON historial_saldo(created_at DESC);

-- ============================================
-- TABLA: solicitudes_recarga
-- ============================================
CREATE TABLE solicitudes_recarga (
id SERIAL PRIMARY KEY,
user_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
monto DECIMAL(10,2) NOT NULL,
metodo_pago VARCHAR(50),
estado VARCHAR(50) DEFAULT 'pendiente' CHECK (estado IN ('pendiente', 'aprobada', 'rechazada', 'completada')),
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE INDEX idx_solicitudes_recarga_user_id ON solicitudes_recarga(user_id);
CREATE INDEX idx_solicitudes_recarga_estado ON solicitudes_recarga(estado);

-- ============================================
-- TABLA: direcciones
-- ============================================
CREATE TABLE direcciones (
id SERIAL PRIMARY KEY,
usuario_id UUID NOT NULL REFERENCES auth.users(id) ON DELETE CASCADE,
nombre VARCHAR(255) NOT NULL,
direccion TEXT NOT NULL,
localidad VARCHAR(255) NOT NULL,
referencia TEXT,
telefono VARCHAR(20) NOT NULL,
es_principal BOOLEAN DEFAULT FALSE,
created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);

CREATE INDEX idx_direcciones_usuario_id ON direcciones(usuario_id);

-- ============================================
-- DATOS DE EJEMPLO (PRODUCTOS Y CUPONES)
-- ============================================

