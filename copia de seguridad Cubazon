-- ============================================
-- POLÃTICAS PARA TODAS LAS TABLAS
-- ============================================

-- 1. PRODUCTOS
ALTER TABLE productos ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Productos visibles para todos" ON productos FOR SELECT USING (true);
CREATE POLICY "Solo admin puede insertar productos" ON productos FOR INSERT TO authenticated WITH CHECK (true);
CREATE POLICY "Solo admin puede actualizar productos" ON productos FOR UPDATE TO authenticated USING (true);
CREATE POLICY "Solo admin puede eliminar productos" ON productos FOR DELETE TO authenticated USING (true);

-- 2. PEDIDOS
ALTER TABLE pedidos ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Cualquiera puede insertar pedidos" ON pedidos FOR INSERT TO anon, authenticated WITH CHECK (true);
CREATE POLICY "Solo admin puede ver pedidos" ON pedidos FOR SELECT TO authenticated USING (true);
CREATE POLICY "Admin puede actualizar pedidos" ON pedidos FOR UPDATE TO authenticated USING (true) WITH CHECK (true);
CREATE POLICY "Admin puede eliminar pedidos" ON pedidos FOR DELETE TO authenticated USING (true);

-- 3. CUPONES
ALTER TABLE cupones ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Cualquiera puede ver cupones activos" ON cupones FOR SELECT USING (activo = true);
CREATE POLICY "Solo admin puede insertar cupones" ON cupones FOR INSERT TO authenticated WITH CHECK (true);
CREATE POLICY "Admin puede actualizar cupones" ON cupones FOR UPDATE TO authenticated USING (true) WITH CHECK (true);
CREATE POLICY "Admin puede eliminar cupones" ON cupones FOR DELETE TO authenticated USING (true);

-- 4. PERFILES
ALTER TABLE perfiles ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Usuarios pueden ver su propio perfil" ON perfiles FOR SELECT USING (auth.uid() = id);
CREATE POLICY "Admin puede ver todos los perfiles" ON perfiles FOR SELECT TO authenticated USING (true);
CREATE POLICY "Sistema puede insertar perfiles" ON perfiles FOR INSERT TO authenticated WITH CHECK (true);
CREATE POLICY "Usuarios pueden actualizar su propio perfil" ON perfiles FOR UPDATE USING (auth.uid() = id);
CREATE POLICY "Admin puede actualizar cualquier perfil" ON perfiles FOR UPDATE TO authenticated USING (true) WITH CHECK (true);
CREATE POLICY "Admin puede eliminar perfiles" ON perfiles FOR DELETE TO authenticated USING (true);

-- 5. SALDO_USUARIOS
ALTER TABLE saldo_usuarios ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Usuarios pueden ver su propio saldo" ON saldo_usuarios FOR SELECT USING (auth.uid() = user_id);
CREATE POLICY "Admin puede ver todos los saldos" ON saldo_usuarios FOR SELECT TO authenticated USING (true);
CREATE POLICY "Sistema puede insertar/actualizar saldo" ON saldo_usuarios FOR ALL TO authenticated USING (true) WITH CHECK (true);

-- 6. HISTORIAL_SALDO
ALTER TABLE historial_saldo ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Usuarios pueden ver su propio historial" ON historial_saldo FOR SELECT USING (auth.uid() = user_id);
CREATE POLICY "Sistema puede insertar historial" ON historial_saldo FOR INSERT TO authenticated WITH CHECK (true);

-- 7. SOLICITUDES_RECARGA
ALTER TABLE solicitudes_recarga ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Usuarios pueden ver sus solicitudes" ON solicitudes_recarga FOR SELECT USING (auth.uid() = user_id);
CREATE POLICY "Usuarios pueden crear solicitudes" ON solicitudes_recarga FOR INSERT TO authenticated WITH CHECK (auth.uid() = user_id);
CREATE POLICY "Admin puede gestionar solicitudes" ON solicitudes_recarga FOR ALL TO authenticated USING (true) WITH CHECK (true);

-- 8. DIRECCIONES
ALTER TABLE direcciones ENABLE ROW LEVEL SECURITY;

CREATE POLICY "Usuarios pueden ver sus direcciones" ON direcciones FOR SELECT USING (auth.uid() = usuario_id);
CREATE POLICY "Usuarios pueden insertar direcciones" ON direcciones FOR INSERT TO authenticated WITH CHECK (auth.uid() = usuario_id);
CREATE POLICY "Usuarios pueden actualizar sus direcciones" ON direcciones FOR UPDATE USING (auth.uid() = usuario_id);
CREATE POLICY "Usuarios pueden eliminar sus direcciones" ON direcciones FOR DELETE USING (auth.uid() = usuario_id);







