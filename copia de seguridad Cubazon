    CREATE OR REPLACE FUNCTION restar_stock()
RETURNS TRIGGER AS $$
DECLARE
  item JSONB;
  producto_id INTEGER;
  cantidad INTEGER;
  stock_actual INTEGER;
BEGIN
  FOR item IN SELECT * FROM jsonb_array_elements(NEW.items)
  LOOP
    producto_id := (item->>'id')::INTEGER;
    cantidad := (item->>'cantidad')::INTEGER;
    
    SELECT stock INTO stock_actual FROM productos WHERE id = producto_id;
    
    IF stock_actual < cantidad THEN
      RAISE EXCEPTION 'Stock insuficiente para producto ID %: disponible %, solicitado %', 
        producto_id, stock_actual, cantidad;
    END IF;
    
    UPDATE productos 
    SET stock = stock - cantidad,
        updated_at = NOW()
    WHERE id = producto_id;
    
    IF (stock - cantidad) <= 0 THEN
      UPDATE productos 
      SET etiquetas = 
        CASE 
          WHEN NOT ('AGOTADO' = ANY(etiquetas)) 
          THEN array_append(etiquetas, 'AGOTADO')
          ELSE etiquetas
        END
      WHERE id = producto_id;
    END IF;
  END LOOP;
  
  RETURN NEW;
END;
$$ LANGUAGE plpgsql SECURITY DEFINER;

CREATE TRIGGER trigger_restar_stock
AFTER INSERT ON pedidos
FOR EACH ROW
EXECUTE FUNCTION restar_stock();




---------------





CREATE OR REPLACE FUNCTION actualizar_usos_cupon()
RETURNS TRIGGER AS $$
BEGIN
IF NEW.cupon_aplicado IS NOT NULL THEN
UPDATE cupones
SET usos_actuales = usos_actuales + 1
WHERE codigo = NEW.cupon_aplicado;
END IF;
RETURN NEW;
END;
$$ LANGUAGE plpgsql;

CREATE TRIGGER trigger_actualizar_usos_cupon
AFTER INSERT ON pedidos
FOR EACH ROW
EXECUTE FUNCTION actualizar_usos_cupon();





